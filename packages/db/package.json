{
  "name": "@intake24/db",
  "type": "module",
  "version": "2025.4",
  "private": true,
  "description": "Intake24 database layer",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/intake24/intake24.git",
    "directory": "packages/db"
  },
  "main": "src/index.ts",
  "engines": {
    "node": ">=24.12.0"
  },
  "scripts": {
    "db:migrate": "pnpm db:foods:migrate && pnpm db:system:migrate",
    "db:dts": "pnpm db:foods:dts && pnpm db:system:dts",
    "db:foods:migrate": "pnpm sequelize db:migrate --options-path sequelize/foods/options.json",
    "db:foods:migration:new": "pnpm sequelize migration:generate --options-path sequelize/foods/options.json",
    "db:foods:migrate:undo": "pnpm sequelize db:migrate:undo --options-path sequelize/foods/options.json",
    "db:foods:dts": "pnpm kysely-codegen --config-file ./foods.dts-config.ts && eslint ./src/kysely/foods.d.ts --fix",
    "db:system:migrate": "pnpm sequelize db:migrate --options-path sequelize/system/options.json",
    "db:system:migration:new": "pnpm sequelize migration:generate --options-path sequelize/system/options.json",
    "db:system:migrate:undo": "pnpm sequelize db:migrate:undo --options-path sequelize/system/options.json",
    "db:system:dts": "pnpm kysely-codegen --config-file ./system.dts-config.ts && eslint ./src/kysely/system.d.ts --fix"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "kysely": "^0.28.11",
    "lodash-es": "^4.17.23",
    "mariadb": "^3.4.5",
    "mssql": "^12.2.0",
    "nanoid": "^5.1.6",
    "pg": "^8.18.0",
    "pg-cursor": "^2.17.0",
    "pg-hstore": "^2.3.4",
    "postgres-array": "^3.0.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@simplewebauthn/server": "^13.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.13",
    "@types/pg": "^8.16.0",
    "@types/pg-cursor": "^2.7.2",
    "@types/validator": "^13.15.10",
    "kysely-codegen": "^0.20.0",
    "sequelize-cli": "^6.6.5",
    "typescript": "^5.9.3"
  }
}
